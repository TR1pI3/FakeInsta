<h2 class="text-2xl font-bold mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :username, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :username, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.email_field :email, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-600">(Minimum <%= @minimum_password_length %> characters)</em>
    <% end %><br>
    <%= f.password_field :password, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autocomplete: "new-password" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.password_field :password_confirmation, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autocomplete: "new-password" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
