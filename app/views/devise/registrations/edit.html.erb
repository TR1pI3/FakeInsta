<h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :username, class: "block text-gray-700 font-semibold mb-2" %><br />
    <%= f.text_field :username, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autofocus: true %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %><br />
    <%= f.email_field :email, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-gray-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em class="text-sm text-gray-600"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %><br />
    <%= f.password_field :password_confirmation, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autocomplete: "new-password" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "block text-gray-700 font-semibold mb-2" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class: "form-input w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-400", autocomplete: "current-password" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<h3 class="text-xl font-semibold mb-2">Cancel my account</h3>

<div class="mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:text-red-700" %></div>

<%= link_to "Back", :back, class: "text-gray-600 hover:text-gray-800" %>
